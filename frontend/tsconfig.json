{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,        
    "module": "esnext",        
    "moduleResolution": "node",     
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "target": "ES2017"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/app/components/FilterList.jsx",
    "src/app/components/ModalForm.jsx",
    "src/app/blog/page.jsx",
    "src/app/components/Litter.jsx",
    "src/app/components/LitterTitle.jsx"
, "src/app/store/pomsky-context.js"  ],
  "exclude": [
    "node_modules"
  ]
}
